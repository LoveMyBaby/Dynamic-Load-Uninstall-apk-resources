<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/background"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center|bottom"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_changebackgound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_login"
        android:textSize="12sp"
        android:text="Change Background from Plugin apk Drawable"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/btn_getvalue_from_plugin_method_nop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_login"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        android:text="Log Plugin apk method（No Params)"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/btn_getvalue_from_plugin_method_hasp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_login"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        android:text="Log Plugin apk method（Input Params)"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/btn_getvalue_from_plugin_private_method_nop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_login"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        android:text="Log Plugin apk Private method（None Params)"
        android:textColor="#ffffff"/>
</LinearLayout>
